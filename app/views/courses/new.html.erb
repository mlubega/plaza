<% provide(:title, 'New Course') %>
<h1>New Course</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@course) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :school_id %>
      <%= f.collection_select :school_id, School.all, :id, :name %>

      <%= f.submit "Create Class", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

