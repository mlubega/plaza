<h1>Create Plaza Account</h1>
<div class="hero-unit">
<div class="row">
  <div class="span6 offset2">
	<%= form_for(@user) do |f| %>
	
	  <%= render 'shared/error_messages', object: f.object %>
	
	  <%= f.label :name %>
	  <%= f.text_field :name %>
  
	  <%= f.label :email %>
	  <%= f.text_field :email %>
  
	  <%= f.label :password %>
	  <%= f.password_field :password %>
  
	  <%= f.label :password_confirmation, "Confirmation" %>
	  <%= f.password_field :password_confirmation %>
  
	  <%= f.submit "Create", class: "btn btn-large btn-danger"%>
	<% end %>
  </div>
</div>
</div>