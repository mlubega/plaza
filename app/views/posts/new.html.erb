<% provide(:title, 'New Post') %>

<h1>New Post</h1>


<div class="row">
  <div class="span6 offset3">
    <%= form_for(@post) do |f| %>
      <div class="center">
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :content %>
      <%= f.text_area :content %> 
	  <div class="center">  
      <%= f.submit "Post!", class: "btn btn-large btn-info" %>
      </div>
    <% end %>
  </div>
</div>
