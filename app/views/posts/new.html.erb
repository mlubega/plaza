<h3><%= @course.title %></h3>
<% if @commenting %>
<%= link_to "New post", new_post_path, class: "btn btn-danger" %>
<% end %>
<h2></h2>

<div class="row">
  <aside class="span4">
  <section>
  <table class="table table-hover">
    <thead><tr><th>Posts</th></tr></thead>
	<tbody>
	<% @topics.each do |t| %>
	 <tr>
	   <td><%= link_to "#{t.posts.first.title}", controller:'posts', action:'index', topic_id:t.id %></td>
     </tr>
	<% end %>
    </tbody>
  </table>
  </section>
  </aside>
  
  <div class="span8">
    <% if @commenting %>
  	  <ul>
  	    <%= render @posts %> 
  	  </ul>
    <% end %>
    <%= form_for(@post) do |f| %>
      <div class="center">
	  <% if @commenting %>
	  <%= f.hidden_field :topic_id, value:@topic.id %>
	  <%= f.hidden_field :commenting, value:true %>	
	  <% end %>  
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :content %>
      <%= f.text_area :content %> 
      <%= f.submit "Post", class: "btn btn-large btn-danger" %>
      </div>
    <% end %>
  </div>
</div>
